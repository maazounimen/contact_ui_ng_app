pipeline {
    agent any

     environment {
        // Spécifiez le chemin relatif ou absolu vers votre artefact Angular à uploader
        ARTIFACT_FILE = 'dist/contact-ui.zip'
        NEXUS_CREDENTIALS = 'nexus_pwd'
        NEXUS_URL = 'http://192.168.1.134:8081'
        BUILD_VERSION = "${env.BUILD_ID}-${env.BUILD_TIMESTAMP}"
        REPOSITORY_NAME = 'contact-ui' // Nom du repository Nexus
    }
    tools {
      nodejs "node16"
    }

    stages {
        stage('version node') {
           steps {
             sh 'node --version'
          }
        }
        stage('Checkout Front Code') {
            steps {
                dir('front') {
                    script {
                        git branch: params.BRANCHE, url: 'https://github.com/maazounimen/contact_ui_ng_app.git'
                    }
                }
            }
        }

        stage('Checkout Code && Build angular') {
            steps {
                script{
                    switch(params.BRANCHE){
                        case "main": sh "npm install && npm run build";break
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            environment {
                SCANNER_HOME = tool name: 'sonar_scanner', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
            }
            steps {
                withSonarQubeEnv('sonar_server') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=contact-ui \
                        -Dsonar.sources=src \
                        -Dsonar.exclusions=node_modules/**,dist/** \
                        -Dsonar.tests=src \
                        -Dsonar.test.inclusions="**/*.spec.ts" 
                    """
                }
            }
        }

        stage('Upload to Nexus') {
            steps {
                script {
                    def nexusUrl = "${NEXUS_URL}/repository/${REPOSITORY_NAME}"
                    def nexusCredentials = credentials("${NEXUS_CREDENTIALS}")

                    withCredentials([nexus(credentialsId: "${nexusCredentials}", nexusUrl: "${nexusUrl}")]){
                        sh "curl -v -u ${nexusCredentials} --upload-file ${ARTIFACT_FILE} ${nexusUrl}/${BUILD_VERSION}/"
                    }
                }
            }
        }
    

}


}