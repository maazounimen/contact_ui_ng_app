pipeline {
    agent any
    tools {
      nodejs "node16"
    }

    stages {
        stage('version node') {
           steps {
             sh 'node --version'
          }
        }
        stage('Checkout Front Code') {
            steps {
                dir('front') {
                    script {
                        git branch: params.BRANCHE, url: 'https://github.com/maazounimen/contact_ui_ng_app.git'
                    }
                }
            }
        }

        stage('Checkout Code && Build angular') {
            steps {
                script{
                    switch(params.BRANCHE){
                        case "main": sh "npm install && npm run build";break
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            environment {
                SCANNER_HOME = tool name: 'sonar_scanner', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
            }
            steps {
                withSonarQubeEnv('sonar_server') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=contact-ui \
                        -Dsonar.sources=src \
                        -Dsonar.exclusions=node_modules/**,dist/** \
                        -Dsonar.tests=src \
                        -Dsonar.test.inclusions="**/*.spec.ts" 
                    """
                }
            }
        }

    stage('Nexus') {
       steps {
        nexusArtifactUploader artifacts: [
            [
                artifactId: 'contact-ui',
                classifier: '',
                file: "${env.ARTIFACT_FILE}",
                type: 'zip'
            ]
        ],
        credentialsId: 'nexus_pwd',
        nexusUrl: 'http://192.168.1.134:8081',
        nexusVersion: 'nexus3',
        protocol: 'http',
        repository: 'contact-ui',
        version: "${env.BUILD_ID}-${env.BUILD_TIMESTAMP}"
      }
}

    

    }

}
